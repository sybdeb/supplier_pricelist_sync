<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend product.template form view with UNSPSC field -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="unspsc"/>
            </xpath>
        </field>
    </record>
    
    <!-- Extend product.product form view -->
    <record id="product_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="unspsc"/>
            </xpath>
        </field>
    </record>
    
    <!-- Extend product list view -->
    <record id="product_product_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="unspsc" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>