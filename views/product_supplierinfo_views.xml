<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend product.supplierinfo form view with extra fields -->
    <record id="product_supplierinfo_form_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delay']" position="after">
                <field name="supplier_stock" string="Voorraad Leverancier"/>  
                <field name="product_code" string="Leverancier SKU"/>
                <field name="min_qty" string="Bestel Hoeveelheid"/>
                <field name="last_sync_date" string="Laatste Import" readonly="1"/>
                <field name="previous_price" string="Vorige Prijs" readonly="1" optional="show"/>
                <field name="price_change_pct" string="Prijswijziging %" readonly="1" optional="show" 
                       decoration-success="price_change_pct &lt; 0" 
                       decoration-danger="price_change_pct &gt; 10"/>
            </xpath>
            <!-- Product identification fields voor CSV matching -->
            <xpath expr="//field[@name='min_qty']" position="after">
                <separator string="Product Identificatie (voor CSV matching)"/>
                <field name="product_name" readonly="1"/>
                <field name="product_barcode" readonly="1"/>
                <field name="product_default_code" readonly="1"/>
            </xpath>
        </field>
    </record>
    
    <!-- Extend product.supplierinfo tree view -->
    <record id="product_supplierinfo_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='price']" position="after">
                <field name="previous_price" string="Vorige Prijs" optional="show"/>
                <field name="price_change_pct" string="Î”%" optional="show" 
                       decoration-success="price_change_pct &lt; 0" 
                       decoration-danger="price_change_pct &gt; 10"
                       widget="percentage"/>
                <field name="supplier_stock" string="Voorraad Lev." optional="show"/>
                <field name="min_qty" optional="hide"/>
                <field name="product_code" optional="hide"/>
                <field name="last_sync_date" string="Laatste Import" optional="show"/>
                <field name="product_name" optional="hide"/>
                <field name="product_barcode" optional="hide"/>
                <field name="product_default_code" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>