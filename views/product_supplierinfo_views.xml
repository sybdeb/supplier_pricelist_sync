<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Uitbreiding van product.supplierinfo form view -->
    <record id="product_supplierinfo_form_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='min_qty']" position="after">
                
                <!-- Import velden groep -->
                <group string="CSV Import Velden" invisible="import_barcode == False and import_sku == False">
                    <field name="import_barcode" readonly="1"/>
                    <field name="import_sku" readonly="1"/>
                    <field name="import_brand" readonly="1"/>
                    <field name="import_description" readonly="1"/>
                    <field name="import_qty_available" readonly="1"/>
                </group>
                
                <!-- Product info groep -->
                <group string="Product Informatie">
                    <field name="product_barcode" readonly="1"/>
                    <field name="product_default_code" readonly="1"/>
                    <field name="product_name" readonly="1"/>
                </group>
                
                <!-- Leverancier specifieke info -->
                <group string="Leverancier Info">
                    <field name="supplier_qty_available"/>
                </group>
                
            </xpath>
        </field>
    </record>

    <!-- Uitbreiding van product.supplierinfo tree view -->
    <record id="product_supplierinfo_tree_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.tree.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='min_qty']" position="after">
                <field name="product_barcode" optional="show"/>
                <field name="product_default_code" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>