<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mapping Save Wizard Form -->
    <record id="view_mapping_save_wizard_form" model="ir.ui.view">
        <field name="name">supplier.mapping.save.wizard.form</field>
        <field name="model">supplier.mapping.save.wizard</field>
        <field name="arch" type="xml">
            <form string="Mapping Template Opslaan">
                <group>
                    <field name="supplier_id" readonly="1"/>
                    <field name="name" placeholder="bijv. 'Copaco Standaard Format'"/>
                    <field name="description" placeholder="Optionele beschrijving van deze mapping"/>
                </group>
                
                <footer>
                    <button string="Opslaan" 
                            name="action_save_template" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Annuleren" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
