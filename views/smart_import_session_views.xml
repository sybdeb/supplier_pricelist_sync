<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_smart_import_session_form" model="ir.ui.view">
        <field name="name">Smart Import Session Form (Persistent)</field>
        <field name="model">supplier.smart.import.session</field>
        <field name="arch" type="xml">
            <form string="ðŸ§  Smart Import - No Data Loss!">
                <header>
                    <button name="action_load_csv" string="ðŸ“‚ Parse CSV" type="object" 
                            class="btn-primary" invisible="state not in ('draft','loaded')"
                            help="Parse uploaded CSV file"/>
                    <button name="action_save_as_template" string="ðŸ’¾ Save as Template" type="object" 
                            class="btn-secondary" invisible="state not in ('loaded','mapped')"
                            help="Save current mapping as reusable template"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,loaded,mapped,imported"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Session Name..."/>
                        </h1>
                    </div>
                    
                    <!-- Configuration Section -->
                    <group name="config">
                        <group>
                            <field name="supplier_id" options="{'no_create': True}"/>
                            <field name="res_model" readonly="1"/>
                        </group>
                        <group>
                            <field name="csv_filename" readonly="1"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- CSV Upload Section -->
                    <group name="csv_upload" string="ðŸ“‚ CSV Upload">
                        <field name="csv_file" filename="csv_filename"/>
                    </group>
                    
                    <!-- Mapping Section -->
                    <notebook>
                        <page string="ðŸŽ¯ Column Mapping" name="mapping">
                            <field name="mapping_lines" nolabel="1">
                                <list editable="bottom">
                                    <field name="csv_index" readonly="1"/>
                                    <field name="csv_column" readonly="1"/>
                                    <field name="sample_data" readonly="1"/>
                                    <field name="odoo_field" required="0"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="ðŸ› Debug Info" name="debug">
                            <group>
                                <field name="headers" readonly="1"/>
                                <field name="preview_data" readonly="1"/>
                                <field name="mapping_data" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_smart_import_session_tree" model="ir.ui.view">
        <field name="name">Smart Import Session Tree</field>
        <field name="model">supplier.smart.import.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="csv_filename"/>
                <field name="state"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <record id="action_smart_import_session" model="ir.actions.act_window">
        <field name="name">ðŸ§  Smart Import (No Data Loss)</field>
        <field name="res_model">supplier.smart.import.session</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Smart Import Session
            </p>
            <p>
                Persistent sessions that don't lose data between actions!
            </p>
        </field>
    </record>
    
    <!-- Menu item for persistent sessions -->
    <menuitem id="menu_smart_import_session" 
              name="Smart Import (Persistent)" 
              parent="menu_supplier_pricelist_import"
              action="action_smart_import_session"
              sequence="15"/>

</odoo>