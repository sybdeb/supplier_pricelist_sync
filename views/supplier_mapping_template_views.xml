<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view for supplier.mapping.template -->
    <record id="supplier_mapping_template_tree_view" model="ir.ui.view">
        <field name="name">Mapping Template Tree</field>
        <field name="model">supplier.mapping.template</field>
        <field name="arch" type="xml">
            <list string="Saved Mapping Templates">
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="create_date"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form view for supplier.mapping.template -->
    <record id="supplier_mapping_template_form_view" model="ir.ui.view">
        <field name="name">Mapping Template Form</field>
        <field name="model">supplier.mapping.template</field>
        <field name="arch" type="xml">
            <form string="Mapping Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="supplier_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                            <field name="create_uid" readonly="1"/>
                        </group>
                    </group>
                    
                    <field name="description" placeholder="Beschrijving van deze mapping template"/>
                    
                    <notebook>
                        <page string="Column Mappings">
                            <field name="mapping_line_ids">
                                <list editable="bottom">
                                    <field name="csv_column"/>
                                    <field name="odoo_field"/>
                                    <field name="sample_data"/>
                                    <field name="sequence"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Skip Voorwaarden" name="skip_conditions">
                            <group>
                                <group string="Voorraad Filters">
                                    <field name="skip_out_of_stock"/>
                                    <field name="min_stock_qty"/>
                                </group>
                                <group string="Prijs Filters">
                                    <field name="skip_zero_price"/>
                                    <field name="min_price"/>
                                </group>
                            </group>
                            <group>
                                <group string="Overige Filters">
                                    <field name="skip_discontinued"/>
                                    <field name="required_fields" placeholder="bijv: ean,price,stock"/>
                                </group>
                                <group>
                                    <div class="alert alert-info" role="alert">
                                        <strong>Info:</strong>
                                        <ul>
                                            <li>Rijen die niet voldoen aan deze voorwaarden worden overgeslagen</li>
                                            <li>Zie import summary voor aantal geskipte rijen per reden</li>
                                            <li>Laat velden leeg/0 om filter uit te schakelen</li>
                                        </ul>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group string="Merk Filtering">
                                    <field name="brand_blacklist" widget="text" placeholder="Samsung&#10;LG&#10;Sony&#10;&#10;(één merk per regel of komma-gescheiden)"/>
                                </group>
                                <group string="EAN Whitelist (voor geblackliste merken)">
                                    <field name="ean_whitelist" widget="text" placeholder="8712345678901&#10;8712345678902&#10;&#10;(één EAN per regel of komma-gescheiden)"/>
                                    <div class="alert alert-warning" role="alert">
                                        <strong>Let op:</strong>
                                        <p>Merk blacklist skipped producten van deze merken.</p>
                                        <p>EAN whitelist maakt uitzonderingen: deze EANs worden WEL geïmporteerd, zelfs als het merk op de blacklist staat.</p>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for supplier.mapping.template -->
    <record id="action_supplier_mapping_template" model="ir.actions.act_window">
        <field name="name">Mapping Templates</field>
        <field name="res_model">supplier.mapping.template</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
</odoo>