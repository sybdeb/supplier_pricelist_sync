<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Direct Import Form View -->
    <record id="view_supplier_direct_import_form" model="ir.ui.view">
        <field name="name">supplier.direct.import.form</field>
        <field name="model">supplier.direct.import</field>
        <field name="arch" type="xml">
            <form string="Direct Supplier Import">
                <sheet>
                    <div class="oe_title">
                        <h1>üß† Direct Import System</h1>
                        <p class="text-muted">Automatic column mapping based on supplier patterns</p>
                    </div>
                    
                    <!-- Rate Limit Banner (Free Version) -->
                    <div class="alert alert-warning" style="margin-bottom: 15px;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <strong>üìä Gratis Versie</strong> - Maximaal 2 imports per dag per leverancier
                            </div>
                            <a href="https://apps.odoo.com/apps/modules/19.0/supplier_pricelist_sync_pro/" 
                               target="_blank" 
                               class="btn btn-sm btn-success">
                                üöÄ Upgrade naar PRO
                            </a>
                        </div>
                    </div>
                    
                    <group>
                        <group>
                            <field name="supplier_id" options="{'no_create': True}"/>
                            <field name="template_id" 
                                   invisible="not supplier_id"
                                   options="{'no_create': True}"
                                   placeholder="Kies template of laat leeg voor auto-mapping"/>
                        </group>
                        <group>
                            <field name="csv_file" filename="csv_filename"/>
                            <field name="csv_filename" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="csv_separator"/>
                            <field name="encoding"/>
                        </group>
                        <group>
                            <field name="has_headers"/>
                        </group>
                    </group>
                    
                    <!-- Parse Button -->
                    <div class="alert alert-info mt-3" invisible="mapping_lines">
                        <p class="mb-2">
                            <strong>üìã Stap 1:</strong> Upload een CSV bestand en klik op <strong>Parse &amp; Map</strong>
                        </p>
                        <button name="action_parse_and_map" 
                                string="Parse &amp; Map" 
                                type="object" 
                                class="btn btn-primary"
                                invisible="not csv_file"
                                help="Parse CSV en maak automatische kolom mapping"/>
                    </div>
                    
                    <!-- Column Mapping Section -->
                    <div invisible="not mapping_lines">
                        <h3>üó∫Ô∏è Column Mapping</h3>
                        <p class="text-muted">
                            Auto-detected mapping - Pas aan indien nodig. Sample data toont eerste rij.
                        </p>
                        
                        <!-- Mapping Table met Sample Data -->
                        <field name="mapping_lines" nolabel="1">
                            <list editable="bottom" create="0" delete="0">
                                <field name="sequence" widget="handle"/>
                                <field name="csv_column" readonly="1"/>
                                <field name="odoo_field" force_save="1" required="0" options="{'no_create': True, 'no_open': True}"/>
                                <field name="sample_data" readonly="1"/>
                            </list>
                        </field>
                        
                        <div class="alert alert-warning mt-2">
                            <strong>‚ö†Ô∏è Vereist:</strong> Minimaal <code>barcode</code> of <code>product_code</code> + <code>price</code>
                        </div>
                    </div>
                    
                    <!-- Import Filtering Section -->
                    <div invisible="not mapping_lines">
                        <group>
                            <group string="üîç Import Filtering">
                                <label for="skip_out_of_stock" string="Voorraad Filters"/>
                                <div>
                                    <field name="skip_out_of_stock" nolabel="1" class="oe_inline"/>
                                    <span class="oe_inline ml-2">Skip als Voorraad = 0</span>
                                </div>
                                <field name="min_stock_qty" string="Minimum Voorraad"/>
                                
                                <label for="skip_zero_price" string="Prijs Filters"/>
                                <div>
                                    <field name="skip_zero_price" nolabel="1" class="oe_inline"/>
                                    <span class="oe_inline ml-2">Skip als Prijs = 0</span>
                                </div>
                                <field name="min_price" string="Minimum Prijs"/>
                                
                                <label for="skip_discontinued" string="Overige"/>
                                <div>
                                    <field name="skip_discontinued" nolabel="1" class="oe_inline"/>
                                    <span class="oe_inline ml-2">Skip Discontinued</span>
                                </div>
                            </group>
                            
                            <group string="üè∑Ô∏è Merk Filtering">
                                <field name="brand_blacklist" widget="text" placeholder="Samsung&#10;LG&#10;Sony&#10;&#10;(√©√©n merk per regel)" nolabel="1"/>
                                <label for="ean_whitelist" string="EAN Whitelist (escapes)"/>
                                <field name="ean_whitelist" widget="text" placeholder="8712345678901&#10;8712345678902&#10;&#10;(√©√©n EAN per regel)" nolabel="1"/>
                                <div class="alert alert-info" role="alert">
                                    <small>
                                        <strong>Merk blacklist:</strong> Skip producten van deze merken.<br/>
                                        <strong>EAN whitelist:</strong> Importeer deze EANs WEL, ondanks blacklist.
                                    </small>
                                </div>
                            </group>
                        </group>
                    </div>
                    
                    <!-- Import Summary -->
                    <div invisible="not import_summary">
                        <h3>üìä Import Resultaat</h3>
                        <field name="import_summary" readonly="1" nolabel="1" widget="text"/>
                    </div>
                    
                </sheet>
                
                <!-- Footer Buttons -->
                <footer>
                    <button string="üíæ Save as Template" 
                            name="action_save_as_template" 
                            type="object" 
                            class="btn-secondary"
                            invisible="not mapping_lines"
                            help="Sla mapping op als herbruikbare template voor deze leverancier"/>
                    
                    <button string="üì• Import Data" 
                            name="action_import_data" 
                            type="object" 
                            class="btn-primary"
                            invisible="not mapping_lines"
                            help="Voer de import uit met geconfigureerde mapping"/>
                    
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open Direct Import -->
    <record id="action_supplier_direct_import" model="ir.actions.act_window">
        <field name="name">Direct Import</field>
        <field name="res_model">supplier.direct.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_supplier_id': active_id,
        }</field>
    </record>

</odoo>
